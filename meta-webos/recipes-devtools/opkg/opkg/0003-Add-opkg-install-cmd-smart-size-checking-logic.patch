 static int verify_pkg_installable(pkg_t * pkg)
 {
     unsigned long kbs_available, pkg_size_kbs;
     char *root_dir = NULL;
     struct stat s;
 
-    if (opkg_config->force_space || pkg->installed_size == 0)
+    if (opkg_config->force_space)
