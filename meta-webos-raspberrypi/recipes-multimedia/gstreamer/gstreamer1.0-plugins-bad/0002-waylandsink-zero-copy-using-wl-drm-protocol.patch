+    GST_TYPE_FD_ALLOCATOR, G_ADD_PRIVATE (GstWlDrmAllocator);
+    GST_DEBUG_CATEGORY_INIT (GST_CAT_DEFAULT, "waylandalloc", 0,
+        "Wl Drm allocator"));
