+  alloc = GST_ALLOCATOR_CAST (allocator);
+
+  allocator->priv = gst_wl_drm_allocator_get_instance_private (allocator);
+  allocator->priv->fd = -1;
+
+  GST_DEBUG_OBJECT (allocator, "wayland : fd (%d)", allocator->priv->fd);
